@using CSharpExampleArtGallery
@model AddArtViewModel

@{
    ViewData["Title"] = "ADD ARTWORK";
    ViewData["Controller"] = "Artworks";
    ViewBag.Links = new Dictionary<string, string> 
        {
            { "Index", "View All Artworks"},
            { "Delete", "Delete Artworks" }
        };
}

<div class="main">
    <h3>Add Artwork</h3>

    <form asp-controller="Artworks" asp-action="Add" method="POST">
        <div class="container">
            <div class="row">
                <div class="form-item col-8">
                    <label asp-for="Title">Title</label>
                    <input asp-for="Title" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-item col-4">
                    <label asp-for="ArtistId">Artist</label>
                    <select asp-for="ArtistId" asp-items="Model.Artists"></select>
                </div>
            </div>
            <div class="row">
                <div class="form-item col-2">
                    <label asp-for="YearCreated">Year Created</label>
                    <input asp-for="YearCreated" />
                    <span asp-validation-for="YearCreated" class="text-danger"></span>
                </div>
                <div class="form-item col-4">
                    <label asp-for="Media">Media</label>
                    <input asp-for="Media" />
                    <span asp-validation-for="Media" class="text-danger"></span>
                </div>
                <div class="form-item col-2">
                    <label asp-for="Height">Height (in.)</label>
                    <input asp-for="Height"  type="number" step="0.5" min="0" value="" />
                    <span asp-validation-for="Height" class="text-danger"></span>
                </div>
                <div class="form-item col-2">
                    <label asp-for="Width">Width (in.)</label>
                    <input asp-for="Width" type="number" step="0.5" min="0" value="" />
                    <span asp-validation-for="Width" class="text-danger"></span>
                </div>
                <div class="form-item col-2">
                    <label asp-for="Depth">Depth (in.)</label>
                    <input asp-for="Depth" type="number" step="0.5" min="0" value="0" />
                </div>
            </div>
            <div class="row">
                <div class="form-item col">
                    <label asp-for="Description">Description</label>
                    <textarea asp-for="Description" maxlength="150"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="col">
                    <div class="row">
                        <div class="form-item col">
                            <label asp-for="ImageId">Image ID</label>
                            <input asp-for="ImageId" />
                            <span asp-validation-for="ImageId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-item col">
                            <label>Categories</label>
                            @foreach (Category category in Model.Categories)
                            {
                                <label>
                                    <input type="checkbox" name="categoryIds" value="@category.Id" />
                                    <span>@category.Title</span>
                                </label>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <button type='submit'>Add to Collection</button>
    </form>


</div>
