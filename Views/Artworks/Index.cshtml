@using CSharpExampleArtGallery
@model List<Artwork>

@{
    ViewData["Title"] = "OUR COLLECTION";
    ViewData["Controller"] = "Artworks";
    ViewBag.Links = new Dictionary<string, string> 
        {
            { "Add", "Add a New Artwork"},
            { "Delete", "Delete Artworks" }
        };
}

<div class="main">
    <h2>ARTWORKS</h2>

    @if(Model?.Count > 0)
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Artist</th>
                    <th>Style</th>
                    <th>Year Created</th>
                    <th>Media</th>
                    <th>Image</th>
                </tr>
            </thead>
            @foreach(Artwork artwork in Model)
            {
                <tr>
                    <td>@artwork.Id</td>
                    <td>@artwork.Title</td>
                    <td>@artwork.Artist</td>
                    <td>@Utils.GetDisplayName(artwork.Style.ToString())</td>
                    <td>@artwork.YearCreated</td>
                    <td>@artwork.Media</td>
                    <td>
                        <a href="https://drive.google.com/uc?export=view&id=@artwork.ImageId" target="_blank">
                            <img src="https://drive.google.com/thumbnail?id=@artwork.ImageId&size=50w" width="50px" />
                        </a>
                    </td>
                </tr>
            }
        </table>
    }
    else
    {
        <em>No artworks to display.</em>
    }
</div>
