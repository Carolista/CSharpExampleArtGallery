@using CSharpExampleArtGallery
@model List<Artist>

@{
    ViewData["Title"] = "DELETE ARTISTS";
    ViewData["Controller"] = "Artists";
    ViewBag.Links = new Dictionary<string, string> 
        {
            { "Index", "View All Artists"},
            { "Add", "Add a New Artist"}
        };
}

<div class="main">
    <h3>Delete Artists</h3>
    @if (Model?.Count > 0)
    {
        <form asp-controller="Artists" asp-action="Delete" method="POST">
            <div class="checkbox-group">
                @foreach (Artist artist in Model)
                {
                    <label>
                        <input type="checkbox" name="artistIds" value="@artist.Id" />
                        <span>@artist.LastName, @artist.FirstName</span>
                    </label>
                }
            </div>
            <button class="delete" type="submit">Delete Selected Artists</button>
        </form>
    }
    else
    {
        <em>No artists to display.</em>
    }
</div>
