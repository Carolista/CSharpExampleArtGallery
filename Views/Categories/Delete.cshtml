@using CSharpExampleArtGallery
@model List<Category>

@{
    ViewData["Title"] = "DELETE CATEGORIES";
    ViewData["Controller"] = "Categories";
    ViewBag.Links = new Dictionary<string, string> 
        {
            { "Index", "View All Categories"},
            { "Add", "Add a New Category"}
        };
}

<div class="main">
    <h3>Delete Categories</h3>
    @if (Model?.Count > 0)
    {
        <form asp-controller="Categories" asp-action="Delete" method="POST">
            <div class="checkbox-group">
                @foreach (Category category in Model)
                {
                    <label>
                        <input type="checkbox" name="categoryIds" value="@category.Id" />
                        <span>@category.Title</span>
                    </label>
                }
            </div>
            <button class="delete" type="submit">Delete Selected Categories</button>
        </form>
    }
    else
    {
        <em>No categories to display.</em>
    }
</div>
