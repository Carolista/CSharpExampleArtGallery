@using CSharpExampleArtGallery
@model AddCategoryViewModel

@{
    ViewData["Title"] = "ADD CATEGORY";
    ViewData["Controller"] = "Categories";
    ViewBag.Links = new Dictionary<string, string> 
        {
            { "Index", "View All Categories"},
            { "Delete", "Delete Categories" }
        };
}

<div class="main">
    <h3>Add Category</h3>

    <form asp-controller="Categories" asp-action="Add" method="POST">
        <div class="form-item col-4">
            <label asp-for="Title">Title</label>
            <input asp-for="Title" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <button type="submit">Add Category</button>
    </form>
</div>
