@using CSharpExampleArtGallery
@model List<Category>

@{
    ViewData["Title"] = "CATEGORIES";
    ViewData["Controller"] = "Categories";
    ViewBag.Links = new Dictionary<string, string> 
        {
            { "Add", "Add a New Category"},
            { "Delete", "Delete Categories" }
        };
}

<div class="main">
    <h2>CATEGORIES</h2>

    @* TODO: Add conditional custom error message if unable to delete categories *@

    @if(Model?.Count > 0)
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                </tr>
            </thead>
            @foreach(Category category in Model)
            {
                @* TODO: create ternary to assign conditional classes to <tr> for errors *@
                
                <tr>
                    <td>@category.Id</td>
                    <td>@category.Title</td>
                </tr>
            }
        </table>
    }
    else
    {
        <em>No categories to display.</em>
    }
</div>
