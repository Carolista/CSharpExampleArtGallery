@using CSharpExampleArtGallery
@model List<Category>

@{
    ViewData["Title"] = "CATEGORIES";
    ViewData["Controller"] = "Categories";
    ViewBag.Links = new Dictionary<string, string> 
        {
            { "Add", "Add a New Category"},
            { "Delete", "Delete Categories" }
        };
}

<div class="main">
    <h2>CATEGORIES</h2>

    @if(ViewData["ErrorMessage"] != null)
    {
        <p class="text-danger fw-bold">@ViewData["ErrorMessage"]</p>
    }

    @if(Model?.Count > 0)
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                </tr>
            </thead>
            @foreach(Category category in Model)
            {
                string errorClass = ViewBag.ErrorIds != null && ViewBag.ErrorIds.Contains(category.Id) ? "text-danger fw-bold" : ""; 

                <tr class="@errorClass">
                    <td>@category.Id</td>
                    <td>@category.Title</td>
                </tr>
            }
        </table>
    }
    else
    {
        <em>No categories to display.</em>
    }
</div>
